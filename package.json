{
  "name": "spelling-bee",
  "version": "1.0.0",
  "type": "module",
  "description": "A fun spelling bee game for kids",
  "scripts": {
    "dev": "npm run build:words && vite",
    "build": "npm run build:words && tsc && vite build",
    "build:words": "node scripts/build-words.js",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/ui": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.55.0",
    "js-yaml": "^4.1.0",
    "terser": "^5.26.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "howler": "^2.2.4"
  }
}
